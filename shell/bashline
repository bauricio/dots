# set up the terminal format
USER_AND_HOST_='\[\e[0;34m\]' ;
PATH_='\[\e[;32m\]' ;
GIT_='\[\e[;31m\]' ;
GIT_REPO_='$(__git_ps1 "(%s) ")' ;
SEPARATOR_='\[\e[;31m\]' ;
SYMBOL=':' ;
PROMPT_='\[\e[;37m\]'
END_='\[\e[m\]' ;
export PS1="$USER_AND_HOST_\h $PATH_\w $GIT_$GIT_REPO_$SEPARATOR_$SYMBOL $PROMPT_$END_"
